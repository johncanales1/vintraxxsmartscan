# Server
PORT=3000
NODE_ENV=production

# Database - Replace with your production database URL
DATABASE_URL=postgresql://user:password@your-production-db-host:5432/vintraxx_prod

# JWT - Generate secure secrets for production
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-long
JWT_ACCESS_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# OpenAI
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_MODEL=gpt-4o

# Email (SendGrid SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-production-sendgrid-api-key
EMAIL_FROM=reports@vintraxx.com
EMAIL_FROM_NAME=VinTraxx SmartScan

# App
REPORT_VERSION=5.1
APP_URL=https://app.vintraxx.com
